<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    //화면
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            //더보기
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="더보기"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/setting"
                        android:src="@drawable/ic_search_black_24dp" />


                <ImageView
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_settings_black_24dp" />

            </RelativeLayout>

            //프로필
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp">

                <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="80dp"
                        android:layout_height="72dp"
                        android:src="@drawable/profile" />

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_profile">

                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="양승희"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_name"
                            android:text="0603yang@naver.com" />
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="16dp"
                        android:text="MY"
                        android:textColor="@android:color/black" />

            </RelativeLayout>

            //송금
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:background="#d0caca">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <ImageView
                            android:id="@+id/ic_money"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_money_24dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="47,990원"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                </RelativeLayout>


                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="송금"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="결제"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

            </LinearLayout>

            //메뉴
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                //첫번째 줄

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_gift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_card_giftcard_black_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_gift"
                                android:layout_centerHorizontal="true"
                                android:text="선물하기"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_alignEnd="@+id/iv_hair"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/ic_red_24dp" />

                        <ImageView
                                android:id="@+id/iv_hair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_content_cut_black_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_hair"
                                android:layout_centerHorizontal="true"
                                android:text="헤어샵"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_makers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_done_black_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_makers"
                                android:layout_centerHorizontal="true"
                                android:text="메이커스"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_emoticon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_emot_black_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_emoticon"
                                android:layout_centerHorizontal="true"
                                android:text="이모티콘"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                </LinearLayout>

                //두번째 줄

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_farmer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_farmer_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_farmer"
                                android:layout_centerHorizontal="true"
                                android:text="파머"
                                android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_alignEnd="@+id/iv_shop"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/ic_red_24dp" />

                        <ImageView
                                android:id="@+id/iv_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_shop_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_shop"
                                android:layout_centerHorizontal="true"
                                android:text="쇼핑하기"
                                android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_style_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_style"
                                android:layout_centerHorizontal="true"
                                android:text="스타일"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_dining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_dining_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_dining"
                                android:layout_centerHorizontal="true"
                                android:text="주문하기"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                </LinearLayout>

                //세번째 줄

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_game_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_game"
                                android:layout_centerHorizontal="true"
                                android:text="게임"
                                android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_page"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_page_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_page"
                                android:layout_centerHorizontal="true"
                                android:text="페이지"
                                android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_melon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_melon_24dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_melon"
                                android:layout_centerHorizontal="true"
                                android:text="멜론"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <ImageView
                                android:id="@+id/iv_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:padding="16dp"
                                android:src="@drawable/ic_service_4dp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_service"
                                android:layout_centerHorizontal="true"
                                android:text="전체서비스"
                                android:textColor="@android:color/black" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            //광고
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/photo" />


        </LinearLayout>

    </ScrollView>

    //하단메뉴 Tab
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_24dp"
                android:layout_weight="1"/>
        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_24dp"
                android:layout_weight="1"/>
        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chart_24dp"
                android:layout_weight="1"/>
        <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_24dp"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
